{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"]
  },
  "paths": {
    "*": ["node_modules/*"]
  },
  "include": ["action.ts"]
}
